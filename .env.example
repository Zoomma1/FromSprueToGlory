# ──────────────── Database ────────────────
DATABASE_URL=postgresql://sprue:sprue_secret@localhost:5432/sprue_to_glory?schema=public
POSTGRES_USER=sprue
POSTGRES_PASSWORD=sprue_secret
POSTGRES_DB=sprue_to_glory

# ──────────────── JWT ────────────────
JWT_SECRET=change-me-to-a-long-random-string
JWT_REFRESH_SECRET=change-me-to-another-long-random-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ──────────────── S3 (filled at M7) ────────────────
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=
# S3_REGION=
# S3_ENDPOINT=  # Leave empty for AWS, set for MinIO (e.g. http://localhost:9000)

# ──────────────── Server ────────────────
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:4200
